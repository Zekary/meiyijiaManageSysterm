<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!--配置jstl-->
    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/c.tld</taglib-location>
        </taglib>
    </jsp-config>

    <!--用户登录-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!--用户退出-->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <!--员工管理-->
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.servlet.EmployeeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/EmployeeServlet</url-pattern>
    </servlet-mapping>

    <!--商品管理-->
    <servlet>
        <servlet-name>GoodsServlet</servlet-name>
        <servlet-class>com.servlet.GoodsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GoodsServlet</servlet-name>
        <url-pattern>/GoodsServlet</url-pattern>
    </servlet-mapping>

    <!--财务管理-->
    <servlet>
        <servlet-name>FinancialServlet</servlet-name>
        <servlet-class>com.servlet.FinancialServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FinancialServlet</servlet-name>
        <url-pattern>/FinancialServlet</url-pattern>
    </servlet-mapping>

    <!--财务管理-->
    <servlet>
        <servlet-name>ResetServlet</servlet-name>
        <servlet-class>com.servlet.ResetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ResetServlet</servlet-name>
        <url-pattern>/ResetServlet</url-pattern>
    </servlet-mapping>

    <!--财务图表-->
    <servlet>
        <servlet-name>FinanChartServlet</servlet-name>
        <servlet-class>com.servlet.FinanChartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FinanChartServlet</servlet-name>
        <url-pattern>/FinanChartServlet</url-pattern>
    </servlet-mapping>

    <!--工资表-->
    <servlet>
        <servlet-name>SalaryServlet</servlet-name>
        <servlet-class>com.servlet.SalaryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SalaryServlet</servlet-name>
        <url-pattern>/SalaryServlet</url-pattern>
    </servlet-mapping>

    <!--超级管理员之员工管理-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.servlet.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>

</web-app>